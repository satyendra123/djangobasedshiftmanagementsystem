from django.urls import path
from . import views

urlpatterns = [
    path('login/', views.operator_login, name='operator_login'),
    path('logout/', views.operator_logout, name='operator_logout'),
    path('<int:shift_id>/', views.shift_detail, name='shift_detail'),
]
